<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inputpelanggaran.InputPelanggaranActivity">

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:id="@+id/input_pelanggaran_cardView"
            app:cardBackgroundColor="#F1F0F0"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:paddingBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="30dp" android:layout_height="30dp"
                                                          android:src="@drawable/orang_1"
                                                          android:id="@+id/input_pelanggaran_stub_img1"
                                                          app:layout_constraintTop_toTopOf="parent"
                                                          android:layout_marginTop="8dp"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Plih Kandidat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_pelanggaran_nama_text"
                    android:textColor="#1E1F1E"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="@+id/input_pelanggaran_stub_img1"
                    app:layout_constraintStart_toEndOf="@+id/input_pelanggaran_stub_img1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="30dp" android:layout_height="30dp"
                                                          android:src="@drawable/orang_2"
                                                          app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_stub_img1"
                                                          app:layout_constraintStart_toStartOf="@+id/input_pelanggaran_stub_img1"
                                                          android:layout_marginTop="24dp"
                                                          android:id="@+id/input_kandidat_stub_img2"/>
            <TextView
                    android:text="Pilih Wakil Kandidat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_pelanggaran_nama_wakil_text"
                    android:textColor="#1E1F1E"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="@+id/input_kandidat_stub_img2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/input_kandidat_stub_img2" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="Provinsi/Kota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_pelanggaran_daerah1_text"
                    app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_nama_text"
                    app:layout_constraintBottom_toBottomOf="@+id/input_pelanggaran_stub_img1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/input_pelanggaran_stub_img1" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView
                    android:text="Provinsi/Kota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_pelanggaran_daerah2_text"
                    app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_nama_wakil_text"
                    app:layout_constraintBottom_toBottomOf="@+id/input_kandidat_stub_img2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/input_kandidat_stub_img2" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Kandidat Terpilih"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:background="@drawable/round_title"
            android:textColor="@android:color/white"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_email_text"/>

    <TextView
            android:text="Pelanggaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:background="@drawable/round_title"
            android:textColor="@android:color/white"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_foto"/>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="0dp" android:layout_height="0dp"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:id="@+id/input_pelanggaran_recyclerView"
                                               tools:listitem="@layout/list_pasal"
                                               app:layout_constraintHorizontal_bias="0.0"
                                               app:layout_constraintTop_toBottomOf="@+id/textView6"
                                               android:layout_marginTop="8dp"
                                               android:layout_marginBottom="16dp"
                                               app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout">
        <Button
                android:text="Tolak"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/input_pelanggaran_total_btn" android:layout_weight="1"
                android:layout_marginRight="8dp" style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
                android:text="Terima"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" android:id="@+id/input_pelanggaran_terima_btn" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
    <TextView
            android:text="Identitas Pelapor"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_pelapor_white_24dp"
            android:background="@drawable/round_primary"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_pelanggaran_nama_pelapor_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_pelanggaran_no_ktp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_nama_pelapor_label"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_pelanggaran_nama_pelapor_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_no_ktp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_pelanggaran_email_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_nama_pelapor_text"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="54dp" app:srcCompat="@drawable/debate" android:id="@+id/input_pelanggaran_foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/input_pelanggaran_cardView" android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>