<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detailkandidat.DetailKandidatActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_team"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:id="@+id/detail_kandidat_foto"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_kandidat_foto">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="46dp"
                       android:src="@drawable/kpu_logo"
                       android:layout_marginTop="8dp"
                       android:layout_marginBottom="8dp"/>

            <TextView
                    android:text="No Urut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/textView2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/line_separator_grey"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh"
                    android:textColor="@color/colorText"
                    android:id="@+id/detail_kandidat_no_urut_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                    android:text="Nama Kandidat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:id="@+id/textView3" android:layout_marginEnd="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/line_separator_grey"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh"
                    android:textColor="@color/colorText"
                    android:id="@+id/detail_kandidat_nama_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="Nama Wakil Kandidat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:id="@+id/input_kandidat_label" android:layout_marginEnd="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/line_separator_grey"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh"
                    android:textColor="@color/colorText"
                    android:id="@+id/detail_kandidat_nama_wakil_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:text="Daerah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:id="@+id/textView4"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/line_separator_grey"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contoh"
                    android:textColor="@color/colorText"
                    android:id="@+id/detail_kandidat_daerah_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>